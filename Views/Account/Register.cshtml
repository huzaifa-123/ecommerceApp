@model ECommerceApp.Models.RegisterViewModel

<div class="register-container">
    <h2 class="text-center fw-bold">Create an Account</h2>
    <form asp-action="Register" class="register-form shadow-lg p-4">
        <div class="form-group mb-3">
            <label class="fw-semibold">Email</label>
            <input asp-for="Email" class="form-control custom-input" placeholder="Enter your email" />
        </div>
        <div class="form-group mb-3">
            <label class="fw-semibold">Password</label>
            <input asp-for="Password" type="password" class="form-control custom-input" placeholder="Enter your password" />
        </div>
        <div class="form-group mb-3">
            <label class="fw-semibold">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control custom-input" placeholder="Re-enter your password" />
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-3">Register</button>
    </form>
</div>

<style>
    .register-container {
        max-width: 400px;
        margin: 50px auto;
        background: #fff;
        padding: 20px;
        border-radius: 12px;
    }

    .register-form {
        background: #f8f9fa;
        border-radius: 12px;
        transition: transform 0.3s ease-in-out;
    }

        .register-form:hover {
            transform: scale(1.02);
        }

    .custom-input {
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
        transition: all 0.3s ease-in-out;
    }

        .custom-input:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.5);
        }

    button {
        border-radius: 8px;
        font-size: 18px;
        font-weight: bold;
    }
</style>
