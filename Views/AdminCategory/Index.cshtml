@model IEnumerable<ECommerceApp.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<h2>Manage Categories</h2>
<a class="btn btn-success mb-3" asp-action="Create">Add Category</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@category.Id"
                       onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a>
