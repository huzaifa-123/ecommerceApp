@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Stock Quantity</label>
        <input asp-for="Stock" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Select Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
    </div>

    <button type="submit" class="btn btn-success">Add Product</button>
</form>
    