@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="mb-4">Edit Product</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <!-- Product Name -->
    <div class="mb-3">
        <label class="form-label fw-bold">Product Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <!-- Description -->
    <div class="mb-3">
        <label class="form-label fw-bold">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <!-- Price -->
    <div class="mb-3">
        <label class="form-label fw-bold">Price ($)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>

    <!-- Stock -->
    <div class="mb-3">
        <label class="form-label fw-bold">Stock Quantity</label>
        <input asp-for="Stock" type="number" min="0" class="form-control" required />
    </div>

    <!-- Image URL -->
    <div class="mb-3">
        <label class="form-label fw-bold">Product Image URL</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Paste image URL here" />
    </div>

    <!-- Category Dropdown -->
    <div class="mb-3">
        <label class="form-label fw-bold">Select Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
    </div>

    <!-- Save & Cancel Buttons -->
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
