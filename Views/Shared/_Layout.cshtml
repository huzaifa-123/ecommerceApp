<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ECommerceApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
</head>
<body>

    <!-- Fixed Navbar (Moved from Index.cshtml) -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">E-Commerce</a>

            <!-- Right Side Buttons -->
            <div class="ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            My Account
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                            <li>
                                <p class="dropdown-item">Welcome, @User.Identity.Name!</p>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Cart">
                                    🛒 View Cart
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Order" asp-action="MyOrders">
                                    📦 My Orders
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                    🚪 Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-outline-primary me-2">Login</a>
                    <a href="/Account/Register" class="btn btn-primary">Register</a>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer (Optional) -->
    <footer class="text-center mt-5 mb-3 text-muted">
        &copy; @DateTime.Now.Year - E-Commerce
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


